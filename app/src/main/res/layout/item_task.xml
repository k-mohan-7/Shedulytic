<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    android:id="@+id/taskCardView">

    <FrameLayout
        android:id="@+id/taskItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_default_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left side: Icon with glass circle -->
            <FrameLayout
                android:layout_width="44dp"
                android:layout_height="44dp">

                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_circle_glass" />

                <ImageView
                    android:id="@+id/taskTypeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="Task Type Icon"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <!-- Main content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp">

                <!-- Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/taskTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:letterSpacing="0.02" />

                    <!-- Task Type Badge -->
                    <TextView
                        android:id="@+id/taskType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/task_type_badge_glass"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <!-- Time Row with icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/task_time_badge_glass"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_time"
                        app:tint="#E0E0E0" />

                    <TextView
                        android:id="@+id/taskTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E8E8E8"
                        android:textSize="13sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Duration/Remaining Time -->
                <TextView
                    android:id="@+id/taskDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B8B8B8"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Checkbox for completion -->
            <CheckBox
                android:id="@+id/taskCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/custom_checkbox" />
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>