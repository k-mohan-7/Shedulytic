<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HabitFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_card_background"
                android:orientation="vertical">

                <!-- Header with improved styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/simple_card_background"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Habits"
                        android:textColor="@color/dark_black"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>                <!-- Planned and Completed Cards Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/simple_card_background"
                    android:elevation="8dp"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Planned Today Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#8B0000"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You Planned Today"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/habits_planned_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">
                                <!-- Habits will be added here dynamically -->
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Completed Today Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#006400"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Completed Today"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/habits_completed_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">
                                <!-- Completed habits will be added here dynamically -->
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>                <!-- Streak Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/simple_card_background"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habit Streak"
                        android:textColor="@color/dark_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                       <TextView
                           android:id="@+id/textView_days_count"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentStart="true"
                           android:layout_marginTop="10dp"
                           android:layout_marginStart="14dp"
                           android:text="0"  
                           android:textColor="@color/dark_black"
                           android:textSize="50sp"
                           android:textStyle="bold" />

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                           android:layout_centerVertical="true"
                           android:orientation="vertical">

                          <ImageView
                              android:id="@+id/fire_icon_streak"
                              android:layout_width="75dp"
                              android:layout_height="73dp"
                              android:contentDescription="Streak fire"
                              android:src="@drawable/ic_fire" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:layout_marginEnd="4dp"
                              android:text="Streak"
                              android:textColor="@color/dark_black"
                              android:textSize="20sp"
                              android:textStyle="bold" />
                       </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>                <!-- Habits List Container with improved scrolling following fragment_home.xml pattern -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/simple_card_background"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header for habits list -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Your Habits for Today"
                        android:textColor="#333333"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Habits RecyclerView with optimized scroll settings matching fragment_home.xml -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/habits_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/recyclerview_background"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp" />

                    <!-- Empty state for habits matching fragment_home.xml pattern -->
                    <LinearLayout
                        android:id="@+id/habit_empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/enhanced_empty_state_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="12dp"
                            android:alpha="0.5"
                            android:src="@drawable/ic_fire" />

                        <TextView
                            android:id="@+id/empty_habits_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Habits for Today"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Add a habit to start building your routine"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Add Habit Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/simple_card_background"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/add_habit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_button_background"
                        android:padding="16dp"
                        android:text="Add Habit"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>
