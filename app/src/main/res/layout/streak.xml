            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <!-- Date 4 -->
        <TextView
            android:id="@+id/dayTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <!-- Date 5 -->
        <TextView
            android:id="@+id/dayTextView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <!-- Date 6 -->
        <TextView
            android:id="@+id/dayTextView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <!-- Date 7 -->
        <TextView
            android:id="@+id/dayTextView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Fire Icons Container with White Circle Backgrounds -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <!-- Fire Icon 1 with Circle -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">
            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/streakFireIcon1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_fire"
                android:layout_gravity="center"
                android:alpha="0.25" />
        </FrameLayout>

        <!-- Fire Icon 2 with Circle -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">
            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/streakFireIcon2"
                android:layout_width="28dp"
