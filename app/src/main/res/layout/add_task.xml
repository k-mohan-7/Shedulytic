<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/add_task_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Task"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>        <!-- Date Selection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick the new templates"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Date Picker Button -->
        <LinearLayout
            android:id="@+id/date_picker_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/selected_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/date_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:hint="Enter task title"
            android:minHeight="50dp"
            android:layout_marginBottom="16dp" />        <!-- Time Selection Section -->
        <LinearLayout
            android:id="@+id/time_picker_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/selected_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/time_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Reminder Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Type"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Workflow Button with selection indicator -->
            <LinearLayout
                android:id="@+id/btn_workflow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkBlue"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_workflow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workflow"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
                    
                <View
                    android:id="@+id/workflow_indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Remainder Button with selection indicator -->
            <LinearLayout
                android:id="@+id/btn_remainder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkGreen"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_remainder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remainder"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
                    
                <View
                    android:id="@+id/remainder_indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- Habit Button with selection indicator -->
            <LinearLayout
                android:id="@+id/btn_habit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_habit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
                    
                <View
                    android:id="@+id/habit_indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat Task Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat this Task"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Daily Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#1E6A35"
                    android:trackTint="#96E0B7" />
            </LinearLayout>

            <!-- Weekly Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekly"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#1E6A35"
                    android:trackTint="#96E0B7" />
            </LinearLayout>

            <!-- Monthly Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monthly"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#1E6A35"
                    android:trackTint="#96E0B7" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Notes Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Optional)"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/additional_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:hint="Enter additional notes"
            android:minHeight="100dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />
            
        <!-- Success Message (Initially Hidden) -->
        <TextView
            android:id="@+id/success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task added successfully!"
            android:textColor="#1E6A35"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#E6F4EA"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />
            
        <!-- Progress Indicator (Initially Hidden) -->
        <ProgressBar
            android:id="@+id/progress_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/darkGreen"
            android:layout_marginBottom="16dp" />
              <!-- Submit Button -->
        <Button
            android:id="@+id/submit_task_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/black_button_background"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>