<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snooze_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/snooze_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#1E1E2E"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_snooze"
                    app:tint="@color/accent_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Snooze Reminder"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Remind me again in..."
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <!-- Task Title -->
            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/snooze_task_background"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:padding="12dp"
                android:text="Task Title"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Snooze Options Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_snooze_5min"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:text="5 min"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/accent_pink"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_snooze_15min"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:text="15 min"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/accent_pink"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_snooze_30min"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:text="30 min"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/accent_pink"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_snooze_1hr"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:text="1 hour"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/accent_pink"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <!-- Custom Time Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_snooze_custom"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="â° Custom Time"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#666666"
                app:strokeWidth="2dp" />

            <!-- Custom Time Picker (Hidden by default) -->
            <LinearLayout
                android:id="@+id/custom_time_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Hours Input -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_hours"
                            android:layout_width="70dp"
                            android:layout_height="56dp"
                            android:background="@drawable/snooze_input_background"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textColor="@android:color/white"
                            android:textColorHint="#666666"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Hours"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text=":"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <!-- Minutes Input -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_minutes"
                            android:layout_width="70dp"
                            android:layout_height="56dp"
                            android:background="@drawable/snooze_input_background"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textColor="@android:color/white"
                            android:textColorHint="#666666"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Minutes"
                            android:textColor="#AAAAAA"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_custom"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/accent_pink"
                    android:text="Confirm Custom Time"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Cancel"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
