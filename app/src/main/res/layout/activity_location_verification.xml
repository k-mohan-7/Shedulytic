<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF" 
    tools:context=".LocationVerificationActivity">

    <TextView
        android:id="@+id/loc_verify_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Location Verification" 
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/loc_verify_habit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_verify_page_title"
        android:text="Habit Title Comes Here"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/loc_verify_habit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_verify_habit_title"
        android:text="Habit description or verification instructions."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/loc_verify_target_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_verify_habit_description"
        android:text="Target Location:"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/loc_verify_target_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_verify_target_location_label"
        android:text="Lat: XX.XXXX, Lon: YY.YYYY"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>
    
    <TextView
        android:id="@+id/loc_verify_current_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loc_verify_target_location_text"
        android:text="Current Location:"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/loc_verify_current_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_verify_current_location_label"
        android:text="Fetching current location..."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/loc_verify_button_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Check My Location &amp; Verify"
        android:backgroundTint="@color/habit_color" 
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/loc_verify_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loc_verify_button_fullscreen"
        android:text="Status: Not verified"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"/>

</RelativeLayout> 