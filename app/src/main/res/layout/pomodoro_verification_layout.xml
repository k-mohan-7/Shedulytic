<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/habit_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_workflow_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left side: Icon with glass circle -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/icon_circle_glass" />

                <ImageView
                    android:id="@+id/pomodoro_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <!-- Main content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp">

                <!-- Title Row with Type Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pomodoro_verification_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Habit Title"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:letterSpacing="0.02" />

                    <!-- Type Badge -->
                    <TextView
                        android:id="@+id/verification_type_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/task_type_badge_glass"
                        android:letterSpacing="0.05"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="POMODORO"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/pomodoro_verification_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete a focused work session"
                    android:textColor="#C8C8C8"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Action Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/verify_pomodoro_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="Start Pomodoro"
                    android:textColor="#E65100"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_timer"
                    app:iconSize="18dp"
                    app:iconTint="#E65100" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
