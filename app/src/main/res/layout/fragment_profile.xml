<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Curved Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/top_background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/top_curved_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="30dp">

                <!-- Profile Image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_image_card"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_pic" />
                </androidx.cardview.widget.CardView>

                <!-- Username -->
                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="User"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Total XP Points with Star Icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        app:tint="#FFD700" />

                    <TextView
                        android:id="@+id/points_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-bold"
                        android:text="0 XP"
                        android:textColor="#FFD700"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Current Level Badge -->
                <TextView
                    android:id="@+id/current_level_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/level_badge_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="BEGINNER"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Cards Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="XP Breakdown"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Workflow Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/workflow_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#1E4B7A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/workflow_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/workflow_logo"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/workflow_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workflow Tasks"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/workflow_task_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 tasks completed"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/workflow_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="+0 XP"
                        android:textColor="#4CAF50"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Remainder Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/remainder_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#116530"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/remainder_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/remainder_logo"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/remainder_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder Tasks"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/remainder_task_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 tasks completed"
                            android:textColor="#90EE90"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/remainder_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="+0 XP"
                        android:textColor="#4CAF50"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Habit Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/habit_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#FF9800"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/habit_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/habit"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/habit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habits"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/habit_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 habits completed"
                            android:textColor="#FFE0B2"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/habit_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="+0 XP"
                        android:textColor="#4CAF50"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Level Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Level Progress"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Level 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/level_one_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/level_one_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trophy"
                            app:tint="#CD7F32" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/level_one_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level I - Beginner"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level_one_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ Unlock custom themes"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/level_one_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/status_badge_active"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="ACTIVE"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/level_one_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/level_progress_drawable" />

                    <TextView
                        android:id="@+id/level_one_progress_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:text="0 / 100 XP"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Level 2 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/level_two_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/level_two_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trophy"
                            app:tint="#C0C0C0" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/level_two_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level II - Intermediate"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level_two_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ Unlock achievement badges"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/level_two_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/status_badge_locked"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="LOCKED"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/level_two_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/level_progress_drawable_locked" />

                    <TextView
                        android:id="@+id/level_two_progress_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:text="Requires 100 XP to unlock"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Level 3 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/level_three_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/level_three_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_trophy"
                            app:tint="#FFD700" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/level_three_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level III - Expert"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/level_three_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ Unlock premium features"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/level_three_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/status_badge_locked"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="LOCKED"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/level_three_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/level_progress_drawable_locked" />

                    <TextView
                        android:id="@+id/level_three_progress_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:text="Requires 250 XP to unlock"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
