<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:gravity="center">

    <!-- Header Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_help_outline"
        android:layout_marginBottom="16dp"
        android:tint="#FF6F00" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can't Complete Task?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="8dp" />

    <!-- Info Text -->
    <TextView
        android:id="@+id/task_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to do with this task?"
        android:textSize="16sp"
        android:textColor="#424242"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/reschedule_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="🔁 Reschedule Task"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/button_primary_blue"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/skip_today_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="⏭️ Skip for Today"
            android:textColor="#FF6F00"
            android:textSize="16sp"
            android:background="@drawable/button_outline_orange"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/cancel_task_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="❌ Cancel Task"
            android:textColor="#D32F2F"
            android:textSize="16sp"
            android:background="@drawable/button_outline_red" />

    </LinearLayout>

</LinearLayout>
